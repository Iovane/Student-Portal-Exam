<div class="container mt-5">
  <div class="jumbotron">
    <h1 class="display-4">Welcome to Student Portal</h1>
    <p class="lead">Your premier destination for Lectures.</p>
    <hr class="my-4">
    <p>Explore our selection of subjects and find the perfect lecture for your stay.</p>
    <% unless user_signed_in? %>
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="users/sign_up" role="button">Sign Up</a>
        <a class="btn btn-success btn-lg" href="users/sign_in" role="button">Login</a>
      </p>
    <% else %>
      <%= link_to "Log out", destroy_user_session_path, class: "btn btn-danger btn-lg", data: {turbo_method: :delete}%>
    <% end %>

  </div>
</div>