<!-- app/views/admin/subjects/_form.html.erb -->
<h1>Create a New Subject</h1>


<%= form_with(model: @subject, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

    <%#= link_to 'Add Lecturer', '#', class: 'btn btn-success add-nested-field', data: { association: 'lecturers', blueprint: j(render('lecturers/lecturer_fields', f: form)) } %>
<!--  </div>-->

  <div class="mb-3">
    <%= form.submit 'Create Subject', class: 'btn btn-primary' %>
    <%= link_to 'Back', subjects_path, class: 'btn btn-secondary' %>

  </div>
<% end %>