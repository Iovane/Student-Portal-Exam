<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
<!--        <div class="form-group">-->
          <%#= f.label :email %>
          <%#= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
<!--        </div>-->

<!--         Uncomment the following lines if you want to include email login -->
         <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
