<!-- app/views/admin/requests/confirm.html.erb -->
<div class="container mt-5">
  <h2>Create Request</h2>


<%= form_with(model: [@lecturer, @request], class: 'mt-3') do |form| %>

  <p><strong>Request Code:</strong> <%= @request.request_code %></p>
  <p><strong>User:</strong> <%= current_user.username %></p>
  <p><strong>Subject:</strong> <%= @lecturer.subject.name %></p>
  <p><strong>Available Lecture Hours:</strong> <%= @lecturer.from_time.strftime("%H:%M") %> - <%= @lecturer.to_time.strftime("%H:%M") %></p>
  <p><strong>Date:</strong> <%= @lecturer.scheduled_date.strftime("%Y-%m-%d") %></p>
  <p><strong>Lecturer:</strong> <%= @lecturer.name %></p>

    <div class="mb-3">
      <%= form.label :from_time, class: "form-label" %>
      <%= form.time_field :from_time,class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :to_time, class: "form-label" %>
      <%= form.time_field :to_time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :scheduled_date, class: 'form-label' %>
      <%= form.date_field :scheduled_date, class: 'form-control', required: true %>
    </div>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Requests', subject_path(@lecturer.subject), class: 'btn btn-secondary' %>

